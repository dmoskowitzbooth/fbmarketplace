<h1>Dashboard#index</h1>
<p>Find me in app/views/dashboard/index.html.erb</p>

<div class="container mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="list-group">
        <%= link_to "My Sales", my_sales_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Sell New Item", new_item_path, class: "list-group-item list-group-item-action" %>
      </div>
    </div>

    <!-- Center Content -->
    <div class="col-md-9">
      <h3>Items for Sale Near You</h3>

      <% @nearby_items.each do |item| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text"><strong>Price:</strong> $<%= item.asking_price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

